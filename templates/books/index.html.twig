{% extends 'base.html.twig' %}

{% block title %}Hello BooksController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Приветствую!</h1>
    <h3><a href="/add_book">Добавить книгу</a></h3>

    <table>
        <caption><h3>Список книг</h3></caption>
        <tr>
            <th style="padding: 5px">Название</th>
            <th style="padding: 5px">Автор</th>
            <th style="padding: 5px">Год издания</th>
            <th style="padding: 5px">Редактировать</th>
        </tr>
        {% for book in books %}
        <tr>
            <th style="padding: 5px">{{ book.name }}</th>
            <th style="padding: 5px">{{ book.author }}</th>
            <th style="padding: 5px">{{ book.yearpublished }}</th>
            <th style="padding: 5px"><a href="/edit/{{ book.id }}">изменить</a></th>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
